                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>
        </StackLayout>
    </ScrollView>
</Page>
