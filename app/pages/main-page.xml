<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:Card="nativescript-cardview"
      navigatingTo="navigatingTo" class="page">
    <!--
    The ActionBar is the NativeScript common abstraction over the Android ActionBar and iOS NavigationBar.
    http://docs.nativescript.org/ui/action-bar
    -->
    <Page.actionBar>
        <ActionBar title="MyHomeBridge">
                <NavigationButton tap="{{ onBack }}" android.systemIcon="ic_ab_back_holo_light"></NavigationButton>
                <ActionItem tap="{{ onOpenSettings }}" android.systemIcon="ic_menu_preferences" ios.systemIcon="2" />
        </ActionBar>        
    </Page.actionBar>
    <ScrollView>
        <StackLayout id="swipable">
            <Label text="Tap the button" class="h1 text-center"/>
            <Button text="TAP YO" tap="{{ onTap }}" class="btn btn-primary btn-active"/>
            <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <SegmentedBar>
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Slider value="18" minValue="5" maxValue="30" />
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

            <Card:CardView class="cardStyle" margin="10" elevation="40" radius="5">
                <Label text="yo" class="h1 text-center"/>
            </Card:CardView>

